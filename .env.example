# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
COMMAND_PREFIX=!

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1000

# Bot Behavior Settings
AUTO_FACT_CHECK=true
RESPOND_TO_BOTS=false
SHOW_CONFIDENCE_SCORE=true
SHOW_SOURCES=true
MAX_SOURCES_DISPLAY=3

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_TIME_WINDOW=300
GLOBAL_RATE_LIMIT_PER_MINUTE=30

# Message Filtering
MIN_MESSAGE_LENGTH=20
MAX_MESSAGE_LENGTH=2000
MIN_CLAIM_LENGTH=10
MAX_CLAIM_LENGTH=1000

# Fact-Checking Settings
FACT_CHECK_TIMEOUT=30
FACT_CHECK_MAX_RETRIES=2
FACT_CHECK_RETRY_DELAY=1.0
CONFIDENCE_THRESHOLD=60
REQUIRE_SOURCES=false

# Logging Configuration
LOG_LEVEL=INFO
FILE_LOGGING=true
LOG_DIR=logs
MAX_LOG_FILES=7
LOG_ROTATION=daily

# Discord Embed Colors (hex values without #)
EMBED_COLOR=0x3498db
ERROR_COLOR=0xe74c3c
SUCCESS_COLOR=0x2ecc71
WARNING_COLOR=0xf39c12

# Performance Settings
MAX_CACHE_SIZE=1000
CACHE_TTL=3600
MAX_CONCURRENT_CHECKS=5
FACT_CHECK_QUEUE_SIZE=50
RATE_LIMIT_CLEANUP_INTERVAL=300
CACHE_CLEANUP_INTERVAL=600

# Security Settings
SANITIZE_INPUT=true
MAX_INPUT_LENGTH=2000
REQUIRE_API_KEYS=true
VALIDATE_SSL=true

# Comma-separated lists (leave empty if not needed)
BLACKLISTED_USERS=
ADMIN_USERS=

# Auto-moderation (experimental)
AUTO_REACT_MISINFORMATION=false
MISINFORMATION_REACTION=‚ö†Ô∏è
FACT_CHECK_REACTION=üîç

# Feature Flags
ENABLE_FACT_CHECKING=true
ENABLE_AUTO_CHECKING=true
ENABLE_MANUAL_COMMANDS=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_METRICS=false
ENABLE_WEB_INTERFACE=false
